@{
    ViewBag.Title = "Buscar Informe de Servicio";
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
}


@section ScriptsSection {

    <script src="@Url.Content("~/Scripts/GSM/Servicio/InfoIndex.js")"></script>
}
<div class="form-inline" id="idContenedor">
    <input type="hidden" id="hidId" value="0" />

    <h1 class="page-header">Mantenimiento de Informe de Servicio</h1>
    <hr />

    <div class="row show-grid">
        <div class="col-md-10">
            <div class="col-xs-6 col-sm-3">
                <label>Número Informe</label>
            </div>
            <div class="col-xs-6 col-sm-3">
                <input class="form-control" type="text" id="txtIdInfo" value="" />
            </div>
        </div>
        <div class="col-md-10">
            <div class="col-xs-6 col-sm-3">
                <label>Fecha de Inicio</label>
            </div>
            <div class="col-xs-6 col-sm-3">
                <input class="form-control" type="text" id="txtFeIni" value="" />
            </div>
        </div>
        <div class="col-md-10">
            <div class="col-xs-6 col-sm-3">
                <label>Fecha de Fin</label>
            </div>
            <div class="col-xs-6 col-sm-3">
                <input class="form-control" type="text" id="txtFeFin" value="" />
            </div>
        </div>
    </div>

    <div class="row show-grid">
        <div class="col-md-10">
            <div class="col-xs-6 col-sm-3">
                <label>Tipo de Servicio </label>
            </div>
            <div class="col-xs-6 col-sm-3">
                <select id="cboTipo"  class="form-control input-sm" >
                    <option>[Seleccione]</option>
                </select>
            </div>
        </div>
        <div class="col-md-10">
            <div class="col-xs-6 col-sm-3">
                <label>Servicio </label>
            </div>
            <div class="col-xs-6 col-sm-3">
                <select id="cboServicio"  class="form-control input-sm">
                    <option>[Seleccione]</option>
                </select>
            </div>
        </div>
        <div class="col-md-10">
            <div class="col-xs-6 col-sm-3" style="float: right">
                <a href="#" onclick="fn_CrearNuevo();">[Nuevo]</a>
            </div>
            <div class="col-xs-6 col-sm-3" style="float: right">
                <button type="button" class="btn btn-primary" onclick="fn_Buscar();">
                    <span class="glyphicon glyphicon-search"></span>&nbsp; &nbsp;Buscar
                </button>
            </div>
        </div>
    </div>

    <div class="row">
        <div id="grid" style="margin-left: 15px; margin-right: 15px;"></div>
    </div>

</div>

