@{
    ViewBag.Title = "Buscar Informe Inspecciones";
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
}


@section ScriptsSection {

    <script src="@Url.Content("~/Scripts/GSM/InformeInspeccion/Index.js")"></script>
}
<div class="form-inline" id="idContenedor">
    <input type="hidden" id="hidId" value="0" />

    <h1 class="page-header">Mantenimiento de Informe de Inspección</h1>
    <hr /> 

    <div class="row show-grid">
        <div class="col-md-10">
            <div class="col-xs-6 col-sm-3">
                <label>Número Informe de Inspección</label>
            </div>
            <div class="col-xs-6 col-sm-3"> 
                <input class="form-control" type="text" id="txtIdInfo" value="" />
            </div>
        </div>
        <div class="col-md-10">
            <div class="col-xs-6 col-sm-3">
            </div>
            <div class="col-xs-6 col-sm-3">
            </div>
        </div>
    </div>
     
    <div class="row show-grid">
        <div class="col-md-10">
            <div class="col-xs-6 col-sm-3">
            </div>
            <div class="col-xs-6 col-sm-3">
            </div>
        </div>
        <div class="col-md-10">
            <div class="col-xs-6 col-sm-3" style="float: right">
                <a href="#" onclick="fn_CrearNuevo();">[Nuevo]</a>
            </div>
            <div class="col-xs-6 col-sm-3" style="float: right">
                <button type="button" class="btn btn-primary" onclick="fn_Buscar();">
                    <span class="glyphicon glyphicon-search"></span>&nbsp; &nbsp;Buscar
                </button>
            </div>
        </div>
    </div>

    <div class="row">
        <div id="grid" style="margin-left: 15px; margin-right: 15px;"></div>
    </div>

</div>

